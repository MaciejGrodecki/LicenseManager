<div ng-app="app">

    <div class="row">
        <form ng-controller="DetailsLicenseFormCtrl">
            <div class="form-group">
                <button type="button" class="btn btn-warning" onclick="MainPageRedirect()">Return</button>
            </div>
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" ng-model="license.name" ng-disabled="isDisabled">
            </div>
            <div class="form-group">
                <label for="count">Count</label>
                <input type="text" class="form-control" id="count" ng-model="license.count" ng-disabled="isDisabled">
            </div>
            <div class="form-group">
                <label for="buyDate">Buy date</label>
                <input type="date" class="form-control" id="buyDate" ng-model="license.buyDate" value="{{license.buyDate}}" ng-disabled="isDisabled">
            </div>
            <div class="form-group">
                <label for="licenseTypeSelect">License type</label>
                <select ng-model="ddlLicenseTypes" ng-options="licenseType.licenseTypeId as
                        licenseType.name for licenseType in licenseTypes" class="form-control" ng-disabled="isDisabled"></select>
            </div>
            <div class="btn-toolbar">
                <button class="btn btn-info" ng-click="UnlockForm()" type="button">Edit</button>
                <button class="btn btn-warning pull-right" ng-click="SaveButton()" type="button" ng-disabled="isDisabled">Save</button>
                <button class="btn btn-danger pull-right" ng-click="DeleteButton()" type="button" ng-disabled="isDisabled">Delete</button>
            </div>
        </form>
    </div>
</div>