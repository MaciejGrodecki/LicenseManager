<div ng-app="app">
    <div class="row">
        <form ng-controller="AddRoomFormCtrl">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" ng-model="name">
            </div>
            <div class="row">
                <button class="btn btn-info pull-right" ng-click="AddRoomButton()" type="button">Add room</button>
                <button type="button" class="btn btn-warning pull-left" onclick="BrowseRoomRedirect()">Return</button>
            </div>

        </form>
    </div>

</div>

@section Scripts{
    <script src="~/js/controllers/rooms.js" asp-append-version="true"></script>
}